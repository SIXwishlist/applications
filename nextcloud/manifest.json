            "package": "php-intl",
            "binary": null
        },
        {
            "type": "system",
            "name": "PHP APCu",
            "package": "php-apcu",
            "binary": null
        },
        {
            "type": "system",
            "name": "PHP APCu BC",
            "package": "php-apcu-bc",
            "binary": null
        },
        {
            "type": "app",
            "name": "MariaDB",
            "package": "db-mariadb"
        }
    ],
    "generation": 1,
    "website_updates": false,
    "download_url": "https://download.nextcloud.com/server/releases/nextcloud-10.0.0.zip",
    "website_datapaths": true,
